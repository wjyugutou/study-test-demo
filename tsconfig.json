{
  "compilerOptions": {
    "incremental": false,
    "target": "ES2022",
    "lib": ["DOM", "ESNext"],
    "jsx": "preserve",
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true,
    "noUnusedLocals": false,
    "skipLibCheck": true,
    "types": ["@webgpu/types", "node"]
  },
  "exclude": ["dist", "node_modules"]
}
