{
  "compilerOptions": {
    "target": "ES2022",
    "jsx": "preserve", 
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["./src/*"]
    },
    "resolveJsonModule": true,
    "types": [
      "vite/client",
      "vitest/importMeta", 
      "unplugin-vue-router/client",
      "@webgpu/types",
      "node"
    ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "types/**/*"],
  "exclude": ["dist", "node_modules"]
}
